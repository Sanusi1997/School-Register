<div class="card  text-white bg-dark">
    <div class="card-body ">
        <h3 class="card-title">@Model.FirstName, @Model.LastName</h3>
        <span>Department: @Model.Department</span>
        <br />
        <span>Year: @Model.Year</span>
    </div>

    <div class="card-footer">
        <a asp-page="./Detail" asp-route-registerId="@Model.Id">
            <ion-icon name="link-sharp"></ion-icon>
        </a>
        <a asp-page="./Edit" asp-route-registerId="@Model.Id">
            <ion-icon name="create-outline"></ion-icon>
        </a>
        <a asp-page="./Delete" asp-route-registerId="@Model.Id">
            <ion-icon name="trash-outline"></ion-icon>
        </a>
    </div>
    <br />
</div> 